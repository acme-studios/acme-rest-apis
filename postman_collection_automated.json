                  "pm.collectionVariables.set('random_username_premium', `premium_${timestamp}`);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', () => {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token_premium', response.token);",
                  "    pm.collectionVariables.set('user_id_premium', response.user.id);",
                  "    ",
                  "    pm.test('User is premium tier', () => {",
                  "        pm.expect(response.user.tier).to.eql('premium');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Premium User\",\n  \"email\": \"{{random_email_premium}}\",\n  \"password\": \"TestPass123!\",\n  \"username\": \"{{random_username_premium}}\",\n  \"tier\": \"premium\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        }
