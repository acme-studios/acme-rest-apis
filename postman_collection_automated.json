    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "jwt_token_premium",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
